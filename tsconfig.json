{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/card/**/*.ts",
    "src/card/**/*.tsx",
    "src/cardInformation/**/*.ts",
    "src/cardInformation/**/*.tsx",
    "src/layout/**/*.ts",
    "src/layout/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
